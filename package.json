{
  "name": "challenge",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/trylix/challenge",
  "author": "Brendenson Andrade <contato@brendenson.dev>",
  "license": "MIT",
  "scripts": {
    "build": "node validate && rimraf dist && tsc --project tsconfig.json",
    "start": "node validate && ts-node -r tsconfig-paths/register src/main",
    "start:dev": "node validate && ts-node-dev -r tsconfig-paths/register src/main",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./jest-e2e.json"
  },
  "dependencies": {
    "@decorators/di": "^1.0.2",
    "@decorators/express": "^2.4.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.2.0",
    "morgan": "^1.10.0",
    "reflect-metadata": "^0.1.13",
    "typescript": "^4.1.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.8",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.9",
    "@types/helmet": "^4.0.0",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.10",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "inquirer": "^7.3.3",
    "jest": "^26.6.3",
    "ora": "^5.1.0",
    "prettier": "^2.2.0",
    "rimraf": "^3.0.2",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.11",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0",
    "tsconfig-paths": "^3.9.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleNameMapper": {
      "src/(.*)": "<rootDir>/$1"
    },
    "rootDir": "src",
    "testRegex": ".(e2e-)spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
